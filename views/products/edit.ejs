<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Edit Product</title>
</head>

<body>
    <div class="mt-3 ms-3">
        <div class="card p-3" style="width: 50%">
            <h1>Edit Product</h1>
            <div class="mb-3">
                <form action="/products/<%=product._id%>?_method=PUT" method="POST">
                    <label for="name">Product Name</label>
                    <input type="text" name="name" placeholder="product name" id="name" value="<%=product.name%>"
                        class="form-control">
                    <label for="price">Price (Unit) $</label>
                    <input type="number" name="price" placeholder="product price" id="price" value="<%=product.price%>"
                        class="form-control">
                    <label for="category">Select Category</label>
                    <select name="category" id="category" class="form-select">
                        <% for(let category of categories){%>
                            <option value="<%=category%>" <%=product.category===category ? 'selected' : '' %>>
                                <%=category%>
                            </option>
                            <%}%>
                    </select>
                    <div class="mt-1">
                        <button class="btn btn-outline-primary">Edit Product</button>
                    </div>
                </form>
            </div>
            <a href="/products/<%=product._id%>" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>
</body>

</html>